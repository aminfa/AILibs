<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="info">

    <Appenders>
        <Console name="STDOUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS}  [%t] %p %c{2.}  %m%n"/>
        </Console>
        <File name="MyFile" fileName="logs/simple-hasco.log" append="false">
            <PatternLayout pattern="%d{HH:mm:ss.SSS}  [%t] %p %c{2.}  %m%n"/>
        </File>
            <Async name="Async" includeLocation="true">
                <AppenderRef ref="MyFile"/>
            </Async>

    </Appenders>


    <Loggers>
        <Root level="info">
            <AppenderRef ref="Async" level="info"/>
            <AppenderRef ref="STDOUT" level="error"/>
        </Root>
        <Logger additivity="false" name="ai.libs.hasco.simplified" level="debug">
            <AppenderRef ref="Async" level="debug"/>
            <AppenderRef ref="STDOUT" level="info"/>
        </Logger>
    </Loggers>

</Configuration>
