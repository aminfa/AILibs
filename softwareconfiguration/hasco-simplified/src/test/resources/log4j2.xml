<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="info">
    <Properties>
        <Property name="basePath">logs/</Property>
    </Properties>

    <Appenders>
        <Console name="STDOUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %p %C{2.}  %m%n"/>
        </Console>
    </Appenders>

    <Loggers>
        <Root level="error">
            <AppenderRef ref="STDOUT"/>
        </Root>
        <Logger name="ai.libs.hasco.simplified" level="debug">
        </Logger>
    </Loggers>

</Configuration>
